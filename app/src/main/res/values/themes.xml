<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zuper_Todo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <!-- Customize your theme here. -->
    </style>

    <style name="theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleBackgroundStyle">@style/themeTitleBackground</item>
        <item name="android:windowTitleSize">50dip</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>

    </style>

    <style name="themeTitleBackground">
        <item name="android:layout_height">wrap_content</item>


    </style>
    <style name="Theme.Zuper_Todo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Zuper_Todo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Zuper_Todo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>